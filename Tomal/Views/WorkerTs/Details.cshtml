@model WorkFinder.Models.WorkerT

@{
    ViewData["Title"] = "Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="container py-5" style="min-height: 80vh;">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h2 class="mb-0 fw-bold"><i class="bi bi-person-badge"></i> Job Seeker Details</h2>
                </div>
                <div class="card-body p-4 mx-auto w-100">
                    <div class="row mb-3 flex-row">
                        <div class="col-6 text-end fw-semibold text-secondary">Name:</div>
                        <div class="col-6"><i class="bi bi-person-fill text-primary me-2"></i>@Model.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6 text-end fw-semibold text-secondary">Gender:</div>
                        <div class="col-6"><i class="bi bi-gender-ambiguous text-primary me-2"></i>@Model.Gender</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6 text-end fw-semibold text-secondary">Age:</div>
                        <div class="col-6"><i class="bi bi-calendar2-week text-primary me-2"></i>@Model.Age</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6 text-end fw-semibold text-secondary">Location:</div>
                        <div class="col-6"><i class="bi bi-geo-alt-fill text-primary me-2"></i>@Model.Location</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6 text-end fw-semibold text-secondary">Salary Per Day:</div>
                        <div class="col-6"><i class="bi bi-cash-coin text-primary me-2"></i>@Model.Salary BDT</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6 text-end fw-semibold text-secondary">Service Category:</div>
                        <div class="col-6"><i class="bi bi-briefcase-fill text-primary me-2"></i>@Model.Experienced</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6 text-end fw-semibold text-secondary">Contact Number:</div>
                        <div class="col-6"><i class="bi bi-telephone-fill text-primary me-2"></i>@Model.ContactNumber</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6 text-end fw-semibold text-secondary">Email:</div>
                        <div class="col-6"><i class="bi bi-envelope-fill text-primary me-2"></i>@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6 text-end fw-semibold text-secondary">Password:</div>
                        <div class="col-6"><i class="bi bi-key-fill text-primary me-2"></i>@Model.Password</div>
                    </div>
                </div>
                <div class="card-footer bg-light text-center rounded-bottom-4 py-2">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning rounded-pill px-4 me-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
