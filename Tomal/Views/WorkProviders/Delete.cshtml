@model WorkFinder.Models.WorkProvider

@{
    ViewData["Title"] = "Delete";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="container py-5" style="min-height: 80vh;">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-header bg-danger text-white text-center rounded-top-4">
                    <h2 class="mb-0 fw-bold"><i class="bi bi-exclamation-triangle"></i> Delete Employer</h2>
                </div>
                <div class="card-body p-4">
                    <h4 class="text-center text-danger mb-4">Are you sure you want to delete this employer?</h4>

                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-circle-fill"></i> This action cannot be undone. All data will be permanently removed.
                    </div>

                    <div class="bg-light p-4 rounded-3 mb-4">
                        <div class="row mb-3">
                            <div class="col-6 text-end fw-semibold text-secondary">Name:</div>
                            <div class="col-6"><i class="bi bi-person-fill text-primary me-2"></i>@Model.Name</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-6 text-end fw-semibold text-secondary">Gender:</div>
                            <div class="col-6"><i class="bi bi-gender-ambiguous text-primary me-2"></i>@Model.Gender</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-6 text-end fw-semibold text-secondary">Location:</div>
                            <div class="col-6"><i class="bi bi-geo-alt-fill text-primary me-2"></i>@Model.Location</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-6 text-end fw-semibold text-secondary">Email:</div>
                            <div class="col-6"><i class="bi bi-envelope-fill text-primary me-2"></i>@Model.Email</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-6 text-end fw-semibold text-secondary">Contact:</div>
                            <div class="col-6"><i class="bi bi-telephone-fill text-primary me-2"></i>@Model.ContactNumber</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-6 text-end fw-semibold text-secondary">Password:</div>
                            <div class="col-6"><i class="bi bi-key-fill text-primary me-2"></i>@Model.Password</div>
                        </div>
                        <div class="row">
                            <div class="col-6 text-end fw-semibold text-secondary">Worker Need:</div>
                            <div class="col-6"><i class="bi bi-people-fill text-primary me-2"></i>@Model.WorkerNeed</div>
                        </div>
                    </div>

                    <form asp-action="Delete" class="text-center">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger rounded-pill px-4 me-3">
                            <i class="bi bi-trash-fill"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>