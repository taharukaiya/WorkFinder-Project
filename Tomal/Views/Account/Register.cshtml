        <div class="form-group mb-3">
            <label asp-for="ContactNumber"></label>
            <input asp-for="ContactNumber" class="form-control" />
            <span asp-validation-for="ContactNumber" class="text-danger"></span>
        </div>
    </div>


    <button type="submit" class="btn btn-primary w-100">Register</button>
</form>

<div class="d-flex justify-content-center mt-3">
    Already have an account? <a href="/Account/Login">Log in here</a>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function toggleRoleFields() {
            const role = document.getElementById("roleSelect").value;
            document.getElementById("workerFields").style.display = role === "Worker" ? "block" : "none";
            document.getElementById("providerFields").style.display = role === "WorkProvider" ? "block" : "none";
        }

        document.getElementById("roleSelect").addEventListener("change", toggleRoleFields);
        toggleRoleFields(); // Initial call
    </script>
}
