@model WorkFinder.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div style="min-height: 60vh" class="py-5 m-auto p-3 bg-white rounded my-5 container">

<h2 class="text-center mb-4">Register</h2>

<form asp-action="Register" method="post" class="mx-auto" style="max-width: 600px;">
